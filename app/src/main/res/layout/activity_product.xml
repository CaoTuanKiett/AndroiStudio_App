<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Product">

    <LinearLayout
        android:layout_width="421dp"
        android:layout_height="74dp"
        android:background="#CC6D6D"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBackListItem"
            android:layout_width="59dp"
            android:layout_height="58dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/backarrow" />

        <EditText
            android:layout_width="259dp"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@drawable/custom_search"
            android:drawableEnd="@drawable/ic_search"
            android:hint="Tìm kiếm..."
            android:paddingLeft="15dp"
            android:paddingRight="10dp" />

        <ImageView
            android:id="@+id/imgOpenProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@drawable/avt4">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/vapor14"
            android:layout_width="350dp"
            android:layout_height="350dp"/>

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="@color/black"
                android:text="NIKE MERCURIAL VAPOR 14 ELITE HG BLUEPRINT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#FF0000"
                android:textSize="22dp"
                android:text="3,950,000₫"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="MÀU"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:background="#0DAAAF"
                    android:layout_width="60dp"
                    android:layout_height="40dp"/>

                <Button
                    android:layout_marginLeft="10dp"
                    android:background="#F44336"
                    android:layout_width="60dp"
                    android:layout_height="40dp"/>

            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="SIZE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="39"
                    android:layout_width="70dp"
                    android:layout_height="50dp"/>
                <Button
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="40"
                    android:layout_width="70dp"
                    android:layout_height="50dp"/>
                <Button
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:text="41"
                    android:layout_width="70dp"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <TextView
                android:layout_marginTop="5dp"
                android:textColor="#504646"
                android:textSize="18dp"
                android:text="Nhà cung cấp: NIKE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="#504646"
                android:textSize="18dp"
                android:text="SKU: DJ2836-484-39"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>